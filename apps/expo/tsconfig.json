{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.ts",
    "types",
    "nativewind-env.d.ts",
    "layouts",
    "lib",
    "app",
    "lib/state"
  ],
  "exclude": ["node_modules"]
}
